{
  "version": 2,
  "name": "nexlife-admin",
  "builds": [{ "src": "package.json", "use": "@vercel/next" }],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "env": {
    "NEXT_PUBLIC_BACKEND_URL": "@next_public_backend_url"
  },
  "functions": {
    "src/app/**/*.ts": {
      "maxDuration": 30
    }
  }
}